{
    "name": "laravel/laravel",
    "description": "The Laravel Framework.",
    "keywords": [
        "framework",
        "laravel"
    ],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^7.1.3",
        "alfred-nutile-inc/laravel-feature-flag": ">=v2",
        "aws/aws-sdk-php": "~3.0",
        "doctrine/dbal": "^2.5",
        "fideloper/proxy": "^4.0",
        "firebase/php-jwt": "^5.0",
        "greggilbert/recaptcha": "^2.2",
        "guzzlehttp/guzzle": "^6.0",
        "laravel/framework": "5.8.*",
        "laravel/tinker": "^1.0",
        "league/flysystem-aws-s3-v3": "^1.0",
        "pfizer/cognito-auth-php": "~v3",
        "pfizer/security-audit-laravel": "dev-master",
        "pusher/pusher-php-server": "~2.0",
        "ramsey/uuid": "^3.4",
        "rap2hpoutre/laravel-log-viewer": "^1.1"
    },
    "require-dev": {
        "codedungeon/phpunit-result-printer": "^0.6.0",
        "filp/whoops": "^2.0",
        "fzaninotto/faker": "^1.4",
        "laravel/dusk": "^3.0",
        "mockery/mockery": "^1.0",
        "pfizer/cat-quality-script": "^1.0@dev",
        "squizlabs/php_codesniffer": "^3.3",
        "php-coveralls/php-coveralls": "^2.1",
        "phpunit/phpunit": "^7.5",
        "beyondcode/laravel-dump-server": "^1.0"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/pfizer/cognito-auth-php.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/pfizer/cat-quality-script.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:pfizer/security-audit-laravel.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/pfizer/support-widget"
        }
    ],
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "bootstrap/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": [
                "laravel/dusk"
            ]
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ],
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 app",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 app",
        "check-metrics": "phpmetrics --report-json=report.json app && vendor/bin/quality_run_check.py report.json",
        "check-metrics-html": "phpmetrics --report-json=report.json --report-html=report app && open report/index.html",
        "coveralls": "php vendor/bin/php-coveralls -v",
        "tests_coveralls": "vendor/bin/phpunit --coverage-clover build/logs/clover.xml && php vendor/bin/php-coveralls -v"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
